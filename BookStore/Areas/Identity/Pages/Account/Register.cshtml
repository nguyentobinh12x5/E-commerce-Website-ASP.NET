@page
@model RegisterModel
<div class="container">
    <div class="row justify-content-center align-items-center">
                <div class="col-md-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Đăng ký</h3>
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="row g-2">
                                <div class="form-floating mb-3 col-md-6">
                                    <input asp-for="Input.Name" class="form-control" />
                                    <label asp-for="Input.Name">Tên</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-md-6">
                                    <input asp-for="Input.Number" class="form-control" />
                                    <label asp-for="Input.Number">Số điện thoại</label>
                                    <span asp-validation-for="Input.Number" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="row g-2">
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.StreetAddress" class="form-control" />
                        <label asp-for="Input.StreetAddress">Địa Chỉ</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.PostalCode" class="form-control" />
                        <label asp-for="Input.PostalCode">Mã bưu chính</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                        </div>
                        <div class="row g-2">
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.State" class="form-control" />
                        <label asp-for="Input.State">Quận/Huyện</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.City" class="form-control"/>
                        <label asp-for="Input.City">Thành Phố</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Mật Khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div>
                            <select asp-for="Input.Role" class="form-control" asp-items="@Model.Input.RoleList">
                                <option disabled selected>-Vai Trò-</option>
                            </select>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-4">Đăng ký</button>
                    </form>
                    <div class="pt-4">
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                <button type="submit" class="w-100 btn btn-lg" style="background-color: #74c0fc" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-5">
                    <img src="~/img/Đăng nhập.jpg" />
                </div>
            </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
