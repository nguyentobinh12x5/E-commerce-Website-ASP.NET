@model Category
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="breadcrumb-item">Tạo mới danh mục sản phẩm</a>
            <span class="breadcrumb-item active">Cập nhật danh mục</span>
        </nav>
    </div>
</div>
<form asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">THÔNG TIN DANH MỤC</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên danh mục</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ShortDesc">Ordering</label>
                        <input type="text" class="form-control" asp-for="DisplayOrder">
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                        <div class="m-b-15">
                            <button class="btn btn-primary" type="submit">
                                <i class="anticon anticon-plus-circle"></i>
                                <span>Cập nhật danh mục</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
